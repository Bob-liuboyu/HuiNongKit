<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_white_round_rect_4"
        android:orientation="vertical"
        android:paddingLeft="39dp"
        android:paddingTop="@dimen/arch_dp_30"
        android:paddingRight="39dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="理赔状态："
            android:textColor="#333333"
            android:textSize="@dimen/arch_dp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status_done"
                android:layout_width="@dimen/arch_dp_70"
                android:layout_height="@dimen/arch_dp_28"
                android:background="@drawable/filter_select_status"
                android:gravity="center"
                android:text="已处理"
                android:textColor="@color/filter_select_text"
                android:textSize="@dimen/arch_dp_14" />

            <TextView
                android:id="@+id/tv_status_todo"
                android:layout_width="@dimen/arch_dp_70"
                android:layout_height="@dimen/arch_dp_28"
                android:layout_marginLeft="@dimen/arch_dp_21"
                android:background="@drawable/filter_select_status"
                android:gravity="center"
                android:text="未处理"
                android:textColor="@color/filter_select_text"
                android:textSize="@dimen/arch_dp_14" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_22"
            android:text="理赔险种："
            android:textColor="#333333"
            android:textSize="@dimen/arch_dp_14" />

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_9"
            android:orientation="horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_22"
            android:text="理赔登记日期："
            android:textColor="#333333"
            android:textSize="@dimen/arch_dp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_start"
                android:layout_width="@dimen/arch_dp_100"
                android:layout_height="@dimen/arch_dp_28"
                android:background="@drawable/filter_select_status"
                android:gravity="center"
                android:text="起始日期"
                android:textColor="@color/filter_select_text"
                android:textSize="@dimen/arch_dp_14" />

            <View
                android:layout_width="@dimen/arch_dp_20"
                android:layout_height="@dimen/arch_dp_1"
                android:background="#EEEEEE"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/arch_dp_10"
                android:layout_marginRight="@dimen/arch_dp_10"/>

            <TextView
                android:id="@+id/tv_date_end"
                android:layout_width="@dimen/arch_dp_100"
                android:layout_height="@dimen/arch_dp_28"
                android:background="@drawable/filter_select_status"
                android:gravity="center"
                android:text="终止日期"
                android:textColor="@color/filter_select_text"
                android:textSize="@dimen/arch_dp_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="256dp"
            android:layout_marginBottom="@dimen/arch_dp_15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_btn_bg_disable_rect"
                android:text="取消"
                android:textColor="#0073BC"
                android:textSize="18sp" />

            <View
                android:layout_width="@dimen/arch_dp_25"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_rect_btn_bg_selector"
                android:text="确认"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</layout>