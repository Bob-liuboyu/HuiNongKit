<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.project.common_resource.PhotoModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/ll_title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#80000000"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/arch_dp_30"
                    android:layout_height="@dimen/arch_dp_30"
                    android:layout_margin="@dimen/arch_dp_15"
                    android:src="@mipmap/icon_back_white" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="(1/300)"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_title_bar"
                android:layout_margin="@dimen/arch_dp_15"
                android:background="#40000000"
                android:orientation="vertical"
                android:padding="@dimen/arch_dp_15">

                <TextView
                    android:id="@+id/tv_measure_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{@string/measure_weight+model.getResult()}'
                    android:textColor="@color/arch_white"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getDate()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="2021-03-21" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getAddr()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="北京" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getPos()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="经纬度" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getNum()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="15011447166" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getCompany()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="百度" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/arch_dp_15"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{model.getName()}"
                        android:textColor="@color/arch_white"
                        android:textSize="20dp"
                        tools:text="刘伯羽" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_warning"
                android:layout_width="match_parent"
                android:layout_height="@dimen/arch_dp_100"
                android:layout_below="@id/ll_data"
                android:background="#40d1031c"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/arch_dp_30"
                    android:layout_height="@dimen/arch_dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/arch_white"
                    android:textSize="@dimen/arch_dp_25"
                    tools:text="存在相似图片，相似度90%" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/arch_dp_158"
            android:background="@color/arch_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_left"
                android:gravity="center"
                android:paddingLeft="@dimen/arch_dp_15"
                android:text="上一只"
                android:textColor="@color/arch_white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/arch_black"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_right"
                android:gravity="center"
                android:paddingRight="@dimen/arch_dp_15"
                android:text="下一只"
                android:textColor="@color/arch_white" />
        </LinearLayout>

    </LinearLayout>
</layout>