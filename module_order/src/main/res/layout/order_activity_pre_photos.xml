<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.project.common_resource.response.PolicyDetailResDTO.ClaimListBean.PigInfoBean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/arch_black"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/ll_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="#80000000"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/arch_dp_30"
                        android:layout_height="@dimen/arch_dp_30"
                        android:layout_margin="@dimen/arch_dp_15"
                        android:src="@mipmap/icon_back_white" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:text="(1/300)"
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_data_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll_title_bar"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_data"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#40000000"
                        android:orientation="vertical"
                        android:visibility="invisible"
                        android:padding="@dimen/arch_dp_15">

                        <TextView
                            android:id="@+id/tv_measure_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="猪身重量=114.6kg"
                            android:textColor="@color/arch_white"
                            android:textSize="23dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/arch_dp_15"
                            android:layout_marginBottom="@dimen/arch_dp_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/arch_dp_20"
                                android:layout_height="@dimen/arch_dp_20"
                                android:src="@mipmap/icon_clock" />

                            <TextView
                                android:id="@+id/tv_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="2021-03-13 18:00:30"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_3"
                            android:background="@drawable/base_dot_line_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/arch_dp_15"
                            android:layout_marginBottom="@dimen/arch_dp_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/arch_dp_20"
                                android:layout_height="@dimen/arch_dp_20"
                                android:src="@mipmap/icon_adress" />

                            <TextView
                                android:id="@+id/tv_addr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="北京"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_3"
                            android:background="@drawable/base_dot_line_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/arch_dp_15"
                            android:layout_marginBottom="@dimen/arch_dp_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/arch_dp_20"
                                android:layout_height="@dimen/arch_dp_20"
                                android:src="@mipmap/icon_earth" />

                            <TextView
                                android:id="@+id/tv_pos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="经纬度"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_3"
                            android:background="@drawable/base_dot_line_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/arch_dp_15"
                            android:layout_marginBottom="@dimen/arch_dp_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/arch_dp_20"
                                android:layout_height="@dimen/arch_dp_20"
                                android:src="@mipmap/icon_phone" />

                            <TextView
                                android:id="@+id/tv_call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="15011447166"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_3"
                            android:background="@drawable/base_dot_line_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/arch_dp_15"
                            android:layout_marginBottom="@dimen/arch_dp_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/arch_dp_20"
                                android:layout_height="@dimen/arch_dp_20"
                                android:src="@mipmap/icon_card" />

                            <TextView
                                android:id="@+id/tv_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="百度"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/arch_dp_10"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="刘伯羽"
                                android:textColor="@color/arch_white"
                                android:textSize="14dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_warning"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/arch_dp_66"
                        android:paddingLeft="15dp"
                        android:paddingRight="@dimen/arch_dp_15"
                        android:layout_marginBottom="@dimen/arch_dp_15"
                        android:background="#40d1031c"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/arch_dp_15"
                            android:layout_height="@dimen/arch_dp_15"
                            android:layout_marginRight="@dimen/arch_dp_10"
                            android:src="@mipmap/icon_warning" />

                        <TextView
                            android:id="@+id/tv_warning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="载入失败，点击页面空白处重试"
                            android:textColor="@color/arch_white"
                            android:textSize="@dimen/arch_dp_14" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/arch_dp_158"
                    android:background="@drawable/base_bg_gradient_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_left"
                        android:gravity="center"
                        android:paddingLeft="@dimen/arch_dp_15"
                        android:text="上一头"
                        android:textColor="@color/arch_white" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/tv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_right"
                        android:gravity="center"
                        android:paddingRight="@dimen/arch_dp_15"
                        android:text="下一头"
                        android:textColor="@color/arch_white" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/arch_dp_15"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"
                    />
            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>
</layout>