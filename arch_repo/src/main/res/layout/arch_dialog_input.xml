<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arch_bg_dialog"
        android:paddingTop="@dimen/arch_dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/arch_str_pwd_title"
            android:textColor="#333333"
            android:textSize="@dimen/arch_dp_18"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/arch_dp_13"
            android:paddingLeft="@dimen/arch_dp_20"
            android:paddingRight="@dimen/arch_dp_20"
            >

            <EditText
                android:id="@+id/input_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/arch_dp_40"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/arch_dialog_input_edit_bg"
                android:ems="20"
                android:focusable="true"
                android:hint="@string/arch_str_pwd_tips"
                android:padding="@dimen/arch_dp_5"
                android:singleLine="true"
                android:textColor="@color/arch_color_737785"
                android:textSize="@dimen/arch_dp_14"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/arch_dp_0_5"
            android:layout_marginTop="@dimen/arch_dp_20"
            android:background="@color/arch_color_f1f1f1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/arch_dp_49"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/arch_dp_7"
                android:layout_weight="1"
                android:background="@color/arch_color_translate"
                android:gravity="center"
                android:text="@string/arch_str_cancel"
                android:textColor="@color/arch_color_737785"
                android:textSize="@dimen/arch_dp_18"/>

            <View
                android:layout_width="@dimen/arch_dp_0_5"
                android:layout_height="match_parent"
                android:background="@color/arch_color_f1f1f1"/>

            <TextView
                android:id="@+id/select_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/arch_dp_7"
                android:layout_weight="1"
                android:background="@color/arch_color_translate"
                android:gravity="center"
                android:text="@string/arch_str_confirm"
                android:textColor="@color/arch_color_00c1ce"
                android:textSize="@dimen/arch_dp_18"/>
        </LinearLayout>
    </LinearLayout>
</layout>